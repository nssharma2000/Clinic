<html>
  <head>
  <title>Login</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div id="main_container" class="container text-center h-screen">
      <div id="container" class="container text-center h-full bg-sky-100">
        <br>
        <br>
          <div class="bg-white mx-auto p-10 text-center w-2/5 rounded-lg shadow-inner">
          <h1 class="font-medium text-4xl mx-auto my-5">Register New Patient</h1>
          <br>
          <%= form_for(@pt) do |p| %>
          <label class="text-lg">Patient Name: </label>
          <%= p.text_field :name, class: "w-3/6 text-lg ms-3 bg-gray-100 outline-none shadow-inner rounded-lg p-2" %>
          <br>
          <br>
          <label class="text-lg">Condition: </label>
          <%= p.text_field :condition, class: "w-3/6 text-lg ms-3 bg-gray-100 outline-none shadow-inner rounded-lg p-2" %>
          <br>
          <br>
          <label class="text-lg">Doctor: </label>
          <%= p.text_field :doctor, class: "w-3/6 text-lg ms-3 bg-gray-100 outline-none shadow-inner rounded-lg p-2" %>
          <br>
          <%= p.submit "Register patient", class: "inline-block bg-blue-500 my-10 text-white text-lg rounded-lg p-2 hover:cursor-pointer" %>
          <% end %>
        









